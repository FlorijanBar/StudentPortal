@{
}
@model List<StudentPortal.Models.Entities.Student>
<h1>Students</h1>

<a class="btn btn-primary" asp-action="Add" asp-controller="Students"> AddStudents 

</a>

<table class="table">
    <thead><
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Subscribed</td>
           

        </tr>
   </thead>
   
   <tbody>
       @foreach( var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Subscribed</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Students" asp-route-id="@student.Id">Edit</a>
                   
                </td>
            </tr>
        }
       

   </tbody>
</table>